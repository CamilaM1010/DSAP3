#include <iostream>
#include "mergeSort.h"
#include "quickSort.h"

using namespace std;

int main() {
    int arr[] = {12, 11, 13, 5, 6, 7};
    int size = sizeof(arr) / sizeof(arr[0]);

    cout << "Given array: ";
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    mergeSort sorter;

    sorter.mergeSortHelper(arr, 0, size - 1);

    cout << "Sorted array: ";
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;


    int arr2[] = {29, 10, 14, 37, 13, 18, 5, 2};
    int size2 = sizeof(arr2) / sizeof(arr2[0]);

    cout << "Given array: ";
    for (int i = 0; i < size2; i++) {
        cout << arr2[i] << " ";
    }
    cout << endl;

    // Call quickSort
    quickSort tester;

    tester.quicksort(arr2, size2);

    cout << "Sorted array: ";
    for (int i = 0; i < size2; i++) {
        cout << arr2[i] << " ";
    }
    cout << endl;

    return 0;
}
